<body>
    <div class="wrapper">
        <%- include('./components/sidebar') %>

        <div class="main-panel">
            <%- include('./components/main-header') %>

            <div class="container">
                <div class="page-inner">
                    <div class="page-header">
                        <h3 class="fw-bold mb-3">List of Products</h3>
                        <ul class="breadcrumbs mb-3">
                            <li class="nav-home">
                                <a href="/admin/index">
                                    <i class="icon-home"></i>
                                </a>
                            </li>
                            <li class="separator">
                                <i class="icon-arrow-right"></i>
                            </li>
                            <li class="nav-item">
                                <a href="/admin/list-product">List of Products</a>
                            </li>
                        </ul>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <div class="d-flex align-items-center">
                                        <button class="btn btn-primary btn-round ms-auto" data-bs-toggle="modal"
                                            data-bs-target="#addProductModal">
                                            <i class="fa fa-plus"></i>
                                            Add Product
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <!-- ADD PRODUCTS MODAL -->
                                    <div class="modal fade" id="addProductModal" tabindex="-1" role="dialog"
                                        aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header border-0">
                                                    <h5 class="modal-title">
                                                        <span class="fw-mediumbold"> Add new product</span>
                                                    </h5>
                                                    <button type="button" class="close closeModalButton"
                                                        data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <p class="small">
                                                        Create a new product using this form, make sure you fill them
                                                        all
                                                    </p>
                                                    <form id="addProduct_form">
                                                        <div class="row">
                                                            <div class="col-sm-12">
                                                                <div class="form-group form-group-default">
                                                                    <label>Product Name</label>
                                                                    <input id="product_name" type="text"
                                                                        class="form-control" placeholder="Fill name"
                                                                        required />
                                                                </div>
                                                            </div>
                                                            <div class="col-md-12 ">
                                                                <div class="form-group form-group-default">
                                                                    <label>Product Price</label>
                                                                    <input id="product_price" type="text"
                                                                        class="form-control" placeholder="Fill price" required />
                                                                </div>
                                                            </div>
                                                            <div class="col-md-12 ">
                                                                <div class="form-group form-group-default">
                                                                    <label>Product Description</label>
                                                                    <input id="product_description" type="text"
                                                                        class="form-control"
                                                                        placeholder="Fill description" required />
                                                                </div>
                                                            </div>
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label for="exampleFormControlFile1">Product
                                                                        image</label>
                                                                    <input type="file" class="form-control-file"
                                                                        id="product_image" required />
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                                <div class="modal-footer border-0">
                                                    <button type="button" id="addRowButton" class="btn btn-primary">
                                                        Add
                                                    </button>
                                                    <button type="button" class="btn btn-danger closeModalButton"
                                                        data-dismiss=" modal">
                                                        Close
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- EDIT PRODUCT MODAL -->
                                    <div class="modal fade" id="editProductModal" tabindex="-1" role="dialog"
                                        aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header border-0">
                                                    <h5 class="modal-title">
                                                        <span class="fw-mediumbold">Edit product</span>
                                                    </h5>
                                                    <button type="button" class="close closeModalButton"
                                                        data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <p class="small">
                                                        Edit a product using this form, make sure you fill them
                                                        all
                                                    </p>
                                                    <form id="editProduct_form">
                                                        <div class="row">
                                                            <div class="col-sm-12">
                                                                <div class="form-group form-group-default">
                                                                    <label>Product Name</label>
                                                                    <input id="edit_product_name" type="text"
                                                                        class="form-control" placeholder="Fill name"
                                                                        required />
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-12">
                                                                <div class="form-group form-group-default">
                                                                    <label>Product Price</label>
                                                                    <input id="edit_product_price" type="text"
                                                                        class="form-control" placeholder="Fill price" required />
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-12">
                                                                <div class="form-group form-group-default">
                                                                    <label>Product Description</label>
                                                                    <input id="edit_product_description" type="text"
                                                                        class="form-control"
                                                                        placeholder="Fill description" required />
                                                                </div>
                                                            </div>
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label for="exampleFormControlFile1">Product
                                                                        Image</label>
                                                                    <input type="file" class="form-control-file"
                                                                        id="edit_product_image" required />
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                                <div class="modal-footer border-0">
                                                    <button type="button" id="editRowButton" class="btn btn-primary"
                                                        data-id="">
                                                        Edit
                                                    </button>
                                                    <button type="button" class="btn btn-danger closeModalButton"
                                                        data-dismiss=" modal">
                                                        Close
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="table-responsive">
                                        <table id="add-row" class="display table table-striped table-hover">
                                            <thead>
                                                <tr>

                                                    <th style="width: 10%">Product Avatar</th>
                                                    <th style="width: 30%">Product Name</th>
                                                    <th style="width: 30%">Product Price</th>
                                                    <th style="width: 50%">Product Description</th>
                                                    <th style="width: 10%">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% list_product.forEach(item=> { %>
                                                    <tr>
                                                        <td>

                                                            <div class="avatar avatar-lg">
                                                                <img src=" /images/<%= item.product_image %>" alt="..."
                                                                    class="avatar-img rounded-square">
                                                            </div>
                                                        </td>

                                                        <td>
                                                            <a href="/admin/detail-product/<%= item._id %>">
                                                                <%= item.product_name %>
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <%= item.product_price %>
                                                        </td>
                                                        <td>
                                                            <%= item.product_description %>
                                                        </td>
                                                        <td>
                                                            <div class="form-button-action">
                                                                <button type="button" data-bs-toggle="tooltip" title=""
                                                                    class="btn btn-link btn-primary btn-lg"
                                                                    data-original-title="Edit Task" id="edit-icon"
                                                                    data-id="<%= item._id %>">
                                                                    <i class="fa fa-edit"></i>
                                                                </button>
                                                                <button type="button" data-bs-toggle="tooltip" title=""
                                                                    class="btn btn-link btn-danger delete-icon"
                                                                    data-id="<%= item._id %>"
                                                                    data-original-title="Remove">
                                                                    <i class="fa fa-times"></i>
                                                                </button>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
